{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2017",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "outDir": "./dist",
    "pretty": true,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "esnext.asynciterable"
    ],
    "paths": {
      "*": [
        "*",
        "node_modules/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ],
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true
  },
  "exclude": [
    ".recli"
  ],
  "include": [
    "src/**/*",
    "typings/**/*", "src/config/validations/.ts"
  ]
}
